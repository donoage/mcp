{
  "$schema": "https://schema.railpack.com",
  "provider": "python",
  "packages": {
    "python": "3.11",
    "uv": "latest"
  },
  "steps": {
    "install": {
      "commands": [
        "pip install --upgrade pip",
        "pip install -r requirements.txt"
      ]
    }
  },
  "deploy": {
    "startCommand": "uvicorn app:app --host 0.0.0.0 --port $PORT"
  }
}

